  Account.AnnualRevenue / CURRENCYRATE(TEXT(Account.CurrencyIsoCode)) >= 500000000,

  'Enterprise',

  IF(

    Account.AnnualRevenue / CURRENCYRATE(TEXT(Account.CurrencyIsoCode)) < 500000000,

    'Commercial',

    ''

  )

